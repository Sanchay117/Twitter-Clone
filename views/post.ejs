<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= post.users.username %>'s Post</title>
        <link
            rel="stylesheet"
            href="/bootstrap-5.3.3-dist/css/bootstrap.min.css"
        />
        <link rel="stylesheet" href="/styles/home.css" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Left Sidebar -->
                <div class="col-2 left-col">
                    <h4 class="mb-4">
                        <i class="fa-brands fa-twitter"></i> Twit
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a href="/home" class="nav-link text-light">Home</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/profile" class="nav-link text-light"
                                >Profile</a
                            >
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/friends" class="nav-link text-light"
                                >Friends</a
                            >
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/messages" class="nav-link text-light"
                                >Messages</a
                            >
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/notifications" class="nav-link text-light"
                                >Notifications</a
                            >
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/settings" class="nav-link text-light"
                                >Settings</a
                            >
                        </li>
                    </ul>
                    <button id="toggleTheme" class="btn btn-outline-light mt-3">
                        Toggle Theme
                    </button>
                </div>

                <!-- Main Post Content -->
                <div class="col-8 middle-col">
                    <div class="tweet">
                        <div class="tweet-author mb-1">
                            <i class="fa-solid fa-user"></i>
                            <%= post.users.username %>
                        </div>
                        <div class="tweet-time mb-3">
                            <i class="fa-regular fa-clock"></i>
                            <%= timeAgo %>
                        </div>
                        <div class="tweet-content fs-5">
                            <%= post.content %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex align-items-center flex-wrap gap-2 my-4">
                        <!-- Like Button -->
                        <form action="/like/<%= post.pid %>" method="POST">
                            <button
                                class="btn btn-sm btn-outline-danger d-flex align-items-center"
                            >
                                <i class="fa-solid fa-heart me-1"></i>
                                <%= post.likes %> Likes
                            </button>
                        </form>

                        <% if (post.uid !== session.user.uid) { %>

                        <!-- Add Friend -->
                        <% if (!isFriend) { %>
                        <form
                            action="/add-friend/<%= post.uid %>"
                            method="POST"
                        >
                            <button
                                class="btn btn-sm btn-outline-primary d-flex align-items-center"
                            >
                                <i class="fa-solid fa-user-plus me-1"></i> Add
                                Friend
                            </button>
                        </form>
                        <% } else { %>
                        <span
                            class="badge bg-success d-flex align-items-center"
                        >
                            <i class="fa-solid fa-user-check me-1"></i> Friends
                        </span>
                        <% } %>

                        <!-- Follow/Unfollow -->
                        <% if (!isFollowing) { %>
                        <form action="/follow/<%= post.uid %>" method="POST">
                            <button
                                class="btn btn-sm btn-outline-secondary d-flex align-items-center"
                            >
                                <i class="fa-solid fa-user-plus me-1"></i>
                                Follow
                            </button>
                        </form>
                        <% } else { %>
                        <form action="/unfollow/<%= post.uid %>" method="POST">
                            <button
                                class="btn btn-sm btn-outline-dark d-flex align-items-center"
                            >
                                <i class="fa-solid fa-user-minus me-1"></i>
                                Unfollow
                            </button>
                        </form>
                        <% } %> <% } %>
                    </div>

                    <!-- Comment Box -->
                    <div class="post-box mt-4">
                        <form action="/post/<%= post.pid %>" method="post">
                            <div class="mb-3">
                                <label for="comment" class="form-label"
                                    >Comment</label
                                >
                                <textarea
                                    class="form-control"
                                    id="comment"
                                    name="comment"
                                    rows="3"
                                    required
                                    maxlength="250"
                                    placeholder="Leave a comment..."
                                    style="min-height: 100px"
                                ></textarea>
                                <div id="charCount" class="form-text mt-1">
                                    0 / 250
                                </div>
                                <div
                                    class="submit mt-3 d-flex justify-content-end"
                                >
                                    <button
                                        type="submit"
                                        class="btn btn-primary submit-btn"
                                    >
                                        Comment
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Comments List -->
                    <% if (comments && comments.length > 0) { %>
                    <h5 class="mt-5 mb-3"><%= comments.length %> Comments</h5>
                    <% comments.forEach(comment => { %>
                    <div class="tweet">
                        <div class="tweet-author mb-1">
                            <i class="fa-solid fa-user"></i>
                            <%= comment.users.username %>
                        </div>
                        <div class="tweet-time mb-2">
                            <i class="fa-regular fa-clock"></i>
                            <%= comment.date %>
                        </div>
                        <div class="tweet-content"><%= comment.content %></div>
                    </div>
                    <% }) %> <% } else { %>
                    <p class="mt-4 text-light">
                        No comments yet. Be the first to comment!
                    </p>
                    <% } %>
                </div>

                <!-- Right Sidebar -->
                <div class="col-2 right-col"></div>
            </div>
        </div>

        <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
        <script
            src="https://kit.fontawesome.com/420dd176dc.js"
            crossorigin="anonymous"
        ></script>
        <script src="/scripts/themeChange.js"></script>
        <script>
            const textarea = document.getElementById('comment');
            const charCount = document.getElementById('charCount');

            if (textarea && charCount) {
                textarea.addEventListener('input', () => {
                    charCount.textContent = `${textarea.value.length} / 250`;
                });
            }
        </script>
    </body>
</html>
