<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Dashboard</title>
        <link
            rel="stylesheet"
            href="/bootstrap-5.3.3-dist/css/bootstrap.min.css"
        />
        <link rel="stylesheet" href="/styles/home.css" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-2 left-col">
                    <h4 class="mb-4">
                        <i class="fa-brands fa-twitter"></i> Twit
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a href="/admin/logout" class="nav-link text-light"
                                >Logout</a
                            >
                        </li>
                    </ul>
                    <button id="toggleTheme" class="btn btn-outline-light mt-3">
                        Toggle Theme
                    </button>
                </div>

                <!-- Admin Dashboard -->
                <div class="col-8 middle-col">
                    <h2 class="text-light mb-4">
                        <i class="fa-solid fa-shield-halved"></i> Admin
                        Dashboard
                    </h2>

                    <!-- Reported Posts -->
                    <h4 class="text-light mb-3">Reported Posts</h4>
                    <% reports.forEach(report => { const post = posts.find(p =>
                    p.pid === report.pid); %>
                    <div
                        class="card mb-3"
                        style="
                            background-color: var(--tweet-bg);
                            color: var(--text-color);
                        "
                    >
                        <div class="card-body">
                            <p>
                                <strong>Post:</strong> <%= post?.content ||
                                'Post not found' %>
                            </p>
                            <p>
                                <strong>Reported by UID:</strong> <%= report.uid
                                %>
                            </p>
                            <p><strong>Reason:</strong> <%= report.reason %></p>
                            <p><strong>Date:</strong> <%= report.date %></p>

                            <% if (post) { %>
                            <form
                                action="/admin/remove-post/<%= post.pid %>"
                                method="POST"
                                class="d-flex flex-wrap align-items-center gap-2 mb-2"
                            >
                                <input
                                    type="text"
                                    name="reason"
                                    placeholder="Reason for removal"
                                    class="form-control w-50"
                                    required
                                />
                                <button class="btn btn-danger btn-sm">
                                    Remove Post
                                </button>
                            </form>

                            <form
                                action="/admin/ban-user/<%= post.user_id %>"
                                method="POST"
                                class="d-flex flex-wrap align-items-center gap-2"
                            >
                                <input
                                    type="text"
                                    name="reason"
                                    placeholder="Reason for ban"
                                    class="form-control w-50"
                                    required
                                />
                                <button class="btn btn-warning btn-sm">
                                    Ban User
                                </button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <% }) %>

                    <!-- Banned Users -->
                    <h4 class="text-light mt-5 mb-3">Banned Users</h4>
                    <% if (bannedUsers.length === 0) { %>
                    <p class="text-muted">No banned users.</p>
                    <% } else { %> <% bannedUsers.forEach(user => { %>
                    <div
                        class="card mb-3"
                        style="
                            background-color: var(--tweet-bg);
                            color: var(--text-color);
                        "
                    >
                        <div class="card-body">
                            <p><strong>UID:</strong> <%= user.uid %></p>
                            <p><strong>Reason:</strong> <%= user.reason %></p>
                            <p><strong>Date:</strong> <%= user.date %></p>
                            <form
                                action="/admin/unban-user/<%= user.uid %>"
                                method="POST"
                            >
                                <button class="btn btn-success btn-sm">
                                    Unban
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }) %> <% } %>
                </div>

                <!-- Right column -->
                <div class="col-2 right-col"></div>
            </div>
        </div>

        <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
        <script
            src="https://kit.fontawesome.com/420dd176dc.js"
            crossorigin="anonymous"
        ></script>
        <script src="/scripts/themeChange.js"></script>
    </body>
</html>
